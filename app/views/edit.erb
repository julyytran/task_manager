<form action="/tasks/<%= @task.id %>" method="post">
  <h1>Edit a task:</h1>
  <input type="hidden" name="_method" value="PUT" />
  <input class="form-control input-lg" type='text' name='task[title]' value="<%= @task.title %>"/><br/>
  <textarea class="form-control" rows="3" name='task[description]'><%= @task.description %></textarea><br/>
  <input class='btn btn-success' type='submit'/>
</form>
